<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/capacity_weight_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#FF3CBDEC"/>

        <TextView
            android:id="@+id/capacity_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:text="@string/capacity_weight_unit"
            android:textColor="#FF3CBDEC"/>

        <TextView
            android:id="@+id/vehicle_model_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:textColor="#FF3CBDEC" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/start_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/start_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/start_date_label"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/end_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_date_label"
            android:layout_marginTop="5dp"
            android:text="@string/end_time"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/end_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/start_date_view"
            android:layout_alignTop="@+id/end_date_label"
            android:layout_below="@+id/start_date_label"
            android:textColor="@color/gray_text" />
    </RelativeLayout>

</LinearLayout>