<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/path_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/path" />

    <TextView
        android:id="@+id/line_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/path_icon"
        android:layout_toRightOf="@id/path_icon"
        android:paddingLeft="8dp" />

    <TextView
        android:id="@+id/weight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/path_icon"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/weight"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/weight_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/weight_name"
        android:layout_toRightOf="@id/weight_name"
        android:paddingLeft="5px"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/vehicle_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weight_name"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="@string/vehicle_type"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/vehicle_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vehicle_type_name"
        android:layout_toRightOf="@id/vehicle_type_name"
        android:maxWidth="80dp"
        android:paddingLeft="5px"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/vehicle_age_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vehicle_type_name"
        android:paddingLeft="100dp"
        android:text="@string/vehicle_age"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/vehicle_age_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vehicle_type_name"
        android:layout_toRightOf="@id/vehicle_age_name"
        android:paddingLeft="5px"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/action_time_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vehicle_type_name"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="@string/time"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/action_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/action_time_name"
        android:layout_toRightOf="@id/action_time_name"
        android:paddingLeft="5dp"
        android:textSize="10sp" />

</RelativeLayout>
