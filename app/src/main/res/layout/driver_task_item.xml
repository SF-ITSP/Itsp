<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mission_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/total_title"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="6dp">

    <RelativeLayout
        android:id="@+id/origin_address_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/address_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/indicator">

            <TextView
                android:id="@+id/origin_city_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="广东省-深圳市"
                android:textColor="@color/black_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/origin_address_detail_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/origin_city_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="新洲十一街万基商务大厦"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/indicator_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/double_indicator" />

            <TextView
                android:id="@+id/line_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indicator_icon"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/indicator">

            <TextView
                android:id="@+id/destination_city_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="广东省-深圳市"
                android:textColor="@color/black_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/destination_address_detail_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/destination_city_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="新洲十一街万基商务大厦"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/indicator"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/gray_background" />

        <TextView
            android:id="@+id/weight_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_line"
            android:layout_marginTop="2dp"
            android:text="14吨" />

        <TextView
            android:id="@+id/vehicle_type_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/weight_view"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/weight_view"
            android:text="冷藏车"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vehicle_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vehicle_type_view"
            android:layout_alignLeft="@+id/driver_label"
            android:text="粤A-123456" />

        <TextView
            android:id="@+id/start_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_view"
            android:text="计划开始" />

        <TextView
            android:id="@+id/start_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/start_time_label"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/start_time_label"
            android:text="05月06日 14:40" />

        <TextView
            android:id="@+id/driver_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/start_time_view"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/start_time_view"
            android:text="司机"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/end_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_time_label"
            android:text="计划结束" />

        <TextView
            android:id="@+id/end_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/end_time_label"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/end_time_label"
            android:text="05月07日 14:40" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

